<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/card_background_question"
        android:elevation="15dp"
        android:fontFamily="casual"
        android:text="Which character is the best in Super Smash Brothers Melee?"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/card_background_answer"
        android:elevation="15dp"
        android:fontFamily="casual"
        android:text="Fox McCloud"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/answerA"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_above="@+id/answerB"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:background="@drawable/card_background_answer"
        android:elevation="5dp"
        android:fontFamily="casual"
        android:text="Mario"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/answerB"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_above="@+id/answerC"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:background="@drawable/card_background_answer"
        android:elevation="5dp"
        android:fontFamily="casual"
        android:text="Fox"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/answerC"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="79dp"
        android:background="@drawable/card_background_answer"
        android:elevation="5dp"
        android:fontFamily="casual"
        android:text="Captain Falcon"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/addButton"
        android:layout_width="59dp"
        android:layout_height="59dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="14dp"
        app:srcCompat="@drawable/add_button" />

    <ImageView
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="177dp"
        app:srcCompat="@drawable/ic_iconmonstr_arrow_25" />

</RelativeLayout>